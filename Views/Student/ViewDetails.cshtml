@model WebApp_Ronish_04.Models.StudentDetails
@{
    ViewData["Title"] = "Student Details";
}

<h2 class="text-2xl font-bold mb-6">Student Details</h2>

<div class="border p-6 rounded-lg shadow max-w-xl bg-white">
    <p class="mb-4 font-semibold text-lg">Ronish Maharjan, Roll: 04</p>
    <dl class="grid grid-cols-2 gap-x-4 gap-y-4">
        <dt class="font-semibold text-gray-700">ID:</dt>
        <dd class="text-gray-900">@Model.Id</dd>

        <dt class="font-semibold text-gray-700">Name:</dt>
        <dd class="text-gray-900">@Model.Name</dd>

        <dt class="font-semibold text-gray-700">Email:</dt>
        <dd class="text-gray-900">@Model.Email</dd>

        <dt class="font-semibold text-gray-700">Address:</dt>
        <dd class="text-gray-900">@Model.Address</dd>

        <dt class="font-semibold text-gray-700">Phone Number:</dt>
        <dd class="text-gray-900">@Model.PhoneNumber</dd>

        <dt class="font-semibold text-gray-700">Course:</dt>
        <dd class="text-gray-900">@Model.Course</dd>
    </dl>

    <div class="mt-6">
        <a asp-action="Create" class="text-white bg-blue-600 hover:bg-blue-700 px-4 py-2 rounded">Add Another Student</a>
    </div>
</div>
