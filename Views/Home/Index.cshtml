@model SimpleInterestAndStudentApp.Models.SimpleInterestModel
@{
    Layout = null;
}

<h2>Simple Interest Calculator</h2>

<form method="post" asp-action="Calculate" asp-controller="Home">
    <table>
        <tr>
            <td>Principal:</td>
            <td><input asp-for="Principal" type="number" step="0.01" /></td>
        </tr>
        <tr>
            <td>Rate (% per annum):</td>
            <td><input asp-for="Rate" type="number" step="0.01" /></td>
        </tr>
        <tr>
            <td>Time (years):</td>
            <td><input asp-for="Time" type="number" step="0.01" /></td>
        </tr>
        <tr>
            <td></td>
            <td><input type="submit" value="Calculate" /></td>
        </tr>
    </table>
</form>
